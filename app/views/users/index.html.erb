<div class="container headline page-header">
	<h1>The Ruuva Marketplace</h1>
	<p>Browse around and be happy!</p>
</div>			
<!-- Left Column, Navigation -->
	
<!-- Center Column, Main -->
<div class="container">
	<ul class="thumbnails">
		<% @users.each do |user| %>
		<% if user.shop? %>
		<li>	
			<%= link_to(shop_user_path(user), class: "thumbnail") do %>
				<% if user.avatar? %>
					<%= image_tag user.avatar_url, class: "marketplace-avatar" %>
				<% else %>
					<%= gravatar_for user, size: 190 %>
				<% end %>
				<div class="caption">
					<h5><%= user.name %></h5>
					<p>Category or description</p>
				</div>
			<% end %>
			<% if current_user.admin? %>
				<%= link_to "Delete", user, method: :delete, confirm: "Sure?" %>
			<% end %>	
		<% end %>			
		</li>
		<% end %>	
	</ul>
</div>
