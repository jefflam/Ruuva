<div class="container headline page-header">
	<h1><%= @title %></h1>
</div>		

<div class="span7 offset2 well">	
<%= render 'shared/flash_notices' %>
<%= form_for @user, html: { multipart: true } do |f| %>
<%= render 'shared/error_messages', object: f.object %>

	<div class="control-group">
		<%= image_tag (@user.avatar_url), class: "avatar" if @user.avatar? %>
		<%= f.label :avatar, "Add/Edit your profile Picture (Max Size: 2 mb)" %>
		<%= f.file_field :avatar %>
		<%= f.label :product_image, "or enter your photo's URL (you MUST include http://)" %>
		<%= f.text_field :remote_avatar_url %>
	</div>
	<div class="control-group">
		<%= f.label :name, "Name (Max Length: 50)" %>
		<%= f.text_field :name %>
	</div>
	<div class="control-group">	
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div class="control-group">
		<%= f.label :user_bio, "Write a little bio/description of yourself or your shop (Max Length: 200)" %>
		<%= f.text_area :user_bio, class: "span5", rows: "4" %>
	</div>
	<div class="control-group">
		<%= f.label :shop, "Activate shop?" %>
		<%= f.check_box :shop %> Check the box to activate your shop!
	</div>
	<div class="control-group">
		<%= image_tag @user.cover_photo_url, class: "cover_photo_preview" if @user.cover_photo? %>
		<%= f.label :cover_photo, "Add a Cover Photo to Your Shop Page (Max Size: 2mb)" %>
		<%= f.file_field :cover_photo %>
	</div>
	<% if @user.authentications.empty? %>
		<!-- <div class="alert alert-info span6">
			<strong>Heads up!</strong> You have to enter your passwords in the box below to proceed to successfully edit your settings. You may also utilize the fields below to change your account password by entering your new password in both the fields.
		</div> -->	
		<div class="control-group">
			<%= f.label :password, "Change Password (Min Length: 6)" %>
			<%= f.password_field :password %>
			<%= f.label :password_confirmation, "New Password again" %>
			<%= f.password_field :password_confirmation %>
		</div>
	<% end %>
	<div class="form-actions">
		<%= f.submit "Update Changes", class: "btn btn-success btn-large" %>
	</div>
<% end %>	

</div>		