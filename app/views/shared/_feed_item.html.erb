<div class="feed-item span3 thumbnail">
	<div class="profilephoto">
		<% if feed_item.user.avatar? %>
			<%= image_tag feed_item.user.avatar_url, class: "feed_avatar" %>
		<% else %>
			<%= gravatar_for feed_item.user, size: 48 %>
		<% end %>
	</div>
	<div class="feed">
		<div class="name"><%= link_to feed_item.user.name, feed_item.user %></div>
		<div class="updates"><%= feed_item.content %></div>
		<div class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
		<% if current_user==feed_item.user %>
			<%= link_to "Delete", feed_item, method: :delete, 
										confirm: "You sure?", 
										title: feed_item.content %>
		<% end %>
		</div>
	</div>
	<div class="clearfix"></div>
</div>