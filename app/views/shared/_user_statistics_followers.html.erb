<% unless @user_followers.empty? %>
	<% @user_followers.each do |user| %>
		<% if user.shop? %>
			<%= link_to(shop_user_path(user)) do %>
		      <% if user.avatar? %>
                <%= image_tag user.avatar_url, class: "profilephoto" %>
              <% else %>
                <%= gravatar_for user, size: 30, type: "profilephoto" %>
              <% end %>
			<% end %>
		<% else %>
			<%= link_to(user_path(user)) do %>
		      <% if user.avatar? %>
                <%= image_tag user.avatar_url, class: "profilephoto" %>
              <% else %>
                <%= gravatar_for user, size: 30, type: "profilephoto" %>
              <% end %>
			<% end %>
		<% end %>
    <% end %>
<% end %>