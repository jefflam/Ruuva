<div class="spanleft-newsfeed">
	<%= gravatar_for @user %>
	<div class="profilename"><%= @user.name %></div>
	<div class="profilebio"><%= @user.user_bio %></div>
	<div class="shopfollowbutton"><%= render 'users/follow_form' if current_user %></div>		
	<div class="shopviewbutton"><div class="btn shopuser primary">View User</div></div>
	<div class="profilename">Posts: <%= @user.posts.count %></div>
	<div class="profilename">Followers: <%= @user.followers.count %></div>
	<div class="profilename">Following: <%= @user.following.count %></div>
</div>	