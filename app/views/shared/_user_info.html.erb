<div class="container user-info">
	<div class="photo">
		<% if @user.avatar? %>
			<%= image_tag @user.avatar_url, class: "avatar" %>
		<% else %>
			<%= gravatar_for @user, size: 64 %>
		<% end %>
	</div>
	<div class="namebio">
		<div class="name"><%= @user.name %></div>
		<div class="bio"><%= @user.user_bio %></div>
	</div>
	<% unless current_user?(@user) %>
	<div class="btnbox">
		<%= render 'users/follow_form' %>
	</div>
	<% end %>
	<div class="followers">
		Followers
		<div class="number"><a href="<%= followers_user_path(@user) %>" id="followers"><%= @user.followers.count %></a></div>
	</div>
</div>