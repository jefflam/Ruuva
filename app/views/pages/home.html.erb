<% if current_user %>
<div class="spanleft-newsfeed">
	<%= gravatar_for @user %>
	<div class="profilename"><%= @user.name %></div>
	<div class="profilebio"><%= @user.user_bio %></div>
	<div class="shopfollowbutton"><div class="btn shopuser primary">Follow User</div></div>		
	<div class="shopviewbutton"><div class="btn shopuser primary">View User</div></div>						
</div>			

<!-- Center Column, Main -->
<div class="spanright-newsfeed">
	<%= render 'shared/post_form' %>
	<%= render 'shared/feed' %>
</div>
<% else %>
<div class="containertop">
	<div class="row" id="home">
		<section id="caption" class="page-header">
			<h1>
				Ruuva makes online shopping simpler and more socialble. Sign up in 10 seconds for free!
				<%= link_to 'Click here to sign up in 10 seconds!', signup_path %>
			</h1>

		</section>			
	</div>
</div>	
<% end %>