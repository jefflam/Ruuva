<ul class="breadcrumb">
	<b>Viewing:</b>
	<li>
		<%= link_to @user.name, shop_user_path(@user) %> <span class="divider">/</span>
	</li>
	<li>
		<%= link_to @collection.name, collection_path(@collection) %> <span class="divider">/</span>
	</li>
	<li class="active">
		Products
	</li>
	<li class="pull-right">
		<% if current_user?(@user) %>
			<a href="#add-new-product" data-toggle="modal" data-target="#add-new-product" class="btn btn-small btn-success breadcrumb-btn breadcrumb-btn-left">Add New Product</a>
		<% end %>
	</li>			
	<% unless @event.empty? %>
		<li class="pull-right">
			<%= link_to "View Collection's Event!", event_path(@event_id), class: "btn btn-small btn-success breadcrumb-btn breadcrumb-btn-left" %>
		</li>
	<% else %>
		<% if current_user?(@user) %>
			<li class="pull-right">
				<%= link_to "Create Event", new_event_path, class: "btn btn-small btn-success breadcrumb-btn breadcrumb-btn-left" %>
			</li>		
		<% end %>
	<% end %>


</ul>