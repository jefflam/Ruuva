<div class="feed-item span3 thumbnail">
	<div class="profilephoto">
		<% if @user.avatar? %>
			<%= image_tag @user.avatar_url, class: "feed_avatar" %>
		<% else %>
			<%= gravatar_for @user, size: 48 %>
		<% end %>
	</div>
	<div class="feed">
		<div class="name"><%= link_to @user.name, @user %></div>
		<div class="updates"><%= post.content %></div>
		<div class="timestamp">Posted <%= time_ago_in_words(post.created_at) %> ago.
		<% if current_user==post.user %>
			<%= link_to "Delete", post, method: :delete, 
										confirm: "You sure?", 
										title: post.content %>
		<% end %>
		</div>
	</div>
	<div class="clearfix"></div>
</div>