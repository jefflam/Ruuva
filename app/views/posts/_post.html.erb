<div class="feed-item span8">
	<div class="profilephoto"><%= gravatar_for @user, size: 48 %></div>
	<div class="feed">
		<div class="name"><%= link_to @user.name, @user %></div>
		<div class="updates"><%= post.content %></div>
		<div class="timestamp">Posted <%= time_ago_in_words(post.created_at) %> ago.
		<% if current_user==post.user %>
			<%= link_to "Delete", post, method: :delete, 
										confirm: "You sure?", 
										title: post.content %>
		<% end %>
		</div>
	</div>
	<div class="clearfix"></div>				  						  	
</div>