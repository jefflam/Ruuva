/* Specific Styling */

/* Main Page, Marketplace */

body { padding-top:40px; background-color: #f9f9f9;}

.thumbnail { background-color: #fff; }

/* Signup Forms at the Top to display if user is not logged in */

.headline {
	text-align:center;
}
	.headline h1 { color:#5a5a5a; }
	.headline p { margin-top:10px; }

#signupform {
	width:980px;
	text-align:left;
	height:290px;
}

#signupformleft {
	width:490px;
	float:left;
}

#signupformright {
	width:470px;
	margin-left:20px;
	float:left;
}
	.field_with_errors input {
		border:1px solid #EE5F5B;
	}
	.field_with_errors input:focus {
		border-color: #b9554d;
		-webkit-box-shadow: 0 0 6px rgba(171, 41, 32, 0.5);
		-moz-box-shadow: 0 0 6px rgba(171, 41, 32, 0.5);
		box-shadow: 0 0 6px rgba(171, 41, 32, 0.5);	
	}

.signupwarning {
	width:266px;
	margin:0 0 14px 111px;
}
	.signupwarning ul {
		margin: 0.3em 1.5em 0 0;
	}

.submitbutton {
	padding: 2px 20px 18px 156px;
}

#signupor {
	width:103px;
	height:25px;
	font-size:16px;
	color:#5a5a5a;
	font-style: italic;
	margin:0 0 0 207px;
}
#fbloginbtn {
	width:225px;
	height:39px;
	margin:0 0 5px 147px;
	cursor:pointer;
}
	.fbloginbtn {
		background:url(<%= asset_path 'fbloginbtn.png' %>);
		width:225px;
		height:39px;		
	}
	.fbloginbtn:hover {
		background-position:0px -42px;
	}
	.fbloginbtn:active {
		background-position:0px -84px;
	}

/* News feed */

.spanleft-newsfeed {
	width:240px;
	margin-left:0px;
}
.profilephotomedium {
		width:48px;
		height:48px;
		background-color:#ccc;
		float:left;
	}
	.profilename {
		width:171px;
		height:18px;
		float:left;
		margin-left:5px;
		font-family:arial;
		font-size:14px;
	}
	.profilebio {
		width:171px;
		height:30px;
		float:left;
		margin-left:5px;
		font-family:arial;
		font-size:11px;		
		line-height:1.4em;
	}

.spanright-newsfeed {
	width:720px;
	margin-left:20px;
}

/* Shop page */

.spanleft-shop {
	width:650px;
	float:left;
}

.media-grid-shop {
  margin-left: -50px;
  margin-bottom: 0;
  zoom: 1;
}
.media-grid-shop:before, .media-grid:after {
  display: table;
  content: "";
  zoom: 1;
  *display: inline;
}
.media-grid-shop:after {
  clear: both;
}
.media-grid-shop li {
  display: inline;
}
.media-grid-shop a {
  float: left;
  padding: 4px;
  margin: 0 0 30px 30px;
  border: 1px solid #ddd;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075);
  -moz-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075);
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075);
}
.media-grid-shop a img {
  display: block;
}
.media-grid-shop a:hover {
  border-color: #0069d6;
  -webkit-box-shadow: 0 1px 4px rgba(0, 105, 214, 0.25);
  -moz-box-shadow: 0 1px 4px rgba(0, 105, 214, 0.25);
  box-shadow: 0 1px 4px rgba(0, 105, 214, 0.25);
  text-decoration:none;
}

.shopstatistics {
	width:240px;
	height:30px;
	float:left;	
	margin-top:10px;
	font-size:20px;
}
.shopupdates {
	width:240px;
	height:30px;
	float:left;	
	margin-top:10px;
	font-size:20px;
}
/* Main Area for Marketplace View */
.spanmain {	width:820px; }

.mediagridinfo {
	width:188px;
	height:40px;
	margin-top:5px;
	padding-left:1px;
}
	.mediagridproducttitle {
	 	font-family:arial;
		font-size:12px;
	}
	.mediagridproductprice {
		font-family:arial;
		font-size:12px;
		color:#5a5a5a;
		width:65px;
		float:left;
	}
	.mediagridshoptitle {
		font-family:arial;
		font-size:12px;
		color:#5a5a5a;
		width:123px;
		float:right;
		text-align:right;
	}

/* Sticky Footer */
* {	margin: 0; }
html, body { height: 100%;}
.wrapper {
	min-height: 95%;
	height: auto !important;
	height: 100%;
	margin: 0 auto -4em;
}
.footer, .push { height: 4em; clear:both;}
footer { 
	margin:0 auto; 
	border-top:1px solid #ccc;
	margin-top:20px;
	padding-top:10px;
}
