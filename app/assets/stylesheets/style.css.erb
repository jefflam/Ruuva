/* Specific Styling */

body { 
	padding-top:40px; 
	background-color: #fafafa; 
}

.headline { text-align:center; }

.thumbnail { background-color: #fff; }
.thumbnails > li > a { color:#222; }
.thumbnails > li > a:hover { text-decoration:none; }

.user-statistics { min-height:187px; padding:15px; float:right;}
.user-statistics .followers { float:left; margin-left:0px; }
.user-statistics .following { float:left; margin-left:0px; }
.user-statistics .events { float:right;}

/* Breadcrumb button styling */
.breadcrumb-btn { margin-top: -5px; }
.breadcrumb-btn-left { margin-left: 5px; }

/* Sticky Footer */
* {	margin: 0; }
html, body { height: 100%;}
.wrapper {
	min-height: 95%;
	height: auto !important;
	height: 100%;
	margin: 0 auto -4em;
}
.footer, .push { height: 4em; clear:both;}
footer { 
	margin:0 auto; 
	border-top:1px solid #eee;
	margin-top:20px;
	padding-top:10px;
	font-size:11px;
}

/* Home Page Call to Action */

.centralize { text-align:center; }

.fbloginbtn {
	background:url(<%= asset_path 'fbloginbtn.png' %>);
	width:225px;
	height:39px;	
	margin:0 auto;	
	cursor:pointer;
}
	.fbloginbtn:hover {
		background-position:0px -42px;
	}
	.fbloginbtn:active {
		background-position:0px -84px;
	}
